{
  "name": "smart-schedule-backend",
  "version": "1.0.0",
  "description": "SmartSchedule Backend API - Node.js + Express + TypeScript",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch -r tsconfig-paths/register src/server.ts",
    "build": "tsc",
    "start": "node -r tsconfig-paths/register dist/server.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:security": "vitest src/tests/security.test.ts",
    "test:rbac": "vitest src/tests/rbac.test.ts",
    "test:integration": "vitest src/tests/integration.test.ts",
    "test:all": "vitest run",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx -r tsconfig-paths/register src/scripts/seed.ts",
    "db:seed:courses": "tsx -r tsconfig-paths/register src/scripts/seed-courses-rooms.ts",
    "db:mock-users": "tsx -r tsconfig-paths/register src/scripts/create-mock-users.ts",
    "db:list-users": "tsx -r tsconfig-paths/register src/scripts/list-all-users.ts",
    "db:export-users": "tsx -r tsconfig-paths/register src/scripts/export-users-to-csv.ts",
    "security:test": "node scripts/security-test.sh",
    "deploy:godaddy": "node scripts/deploy-godaddy.sh"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@simplewebauthn/server": "^13.2.2",
    "@simplewebauthn/types": "^12.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-brute": "^1.0.1",
    "express-brute-redis": "^0.0.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-slow-down": "^2.0.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "lib0": "^0.2.114",
    "morgan": "^1.10.0",
    "redis": "^4.6.10",
    "validator": "^13.11.0",
    "winston": "^3.11.0",
    "ws": "^8.18.3",
    "xss": "^1.0.14",
    "y-protocols": "^1.0.6",
    "y-websocket": "^3.0.0",
    "yjs": "^13.6.27",
    "zod": "^3.22.4",
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/supertest": "^2.0.16",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.1.1",
    "prisma": "^5.22.0",
    "supertest": "^6.3.3",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "express",
    "typescript",
    "prisma",
    "postgresql",
    "jwt",
    "api"
  ],
  "author": "SmartSchedule Team",
  "license": "MIT"
}

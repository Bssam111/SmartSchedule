# ============================================
# Backend Dockerfile - Production
# Optimized for production deployment
# ============================================

# ===== Stage 1: Dependencies =====
FROM node:20-alpine AS deps
LABEL maintainer="SmartSchedule Team"

# Install system dependencies for Prisma
RUN apk add --no-cache libc6-compat openssl python3 make g++

WORKDIR /app

# Copy dependency manifests (paths relative to repo root when using absolute Dockerfile path)
COPY backend/package*.json ./
COPY backend/prisma ./prisma/

# Install ALL dependencies (including devDependencies for build)
RUN npm ci && \
    npm cache clean --force

# Generate Prisma Client
RUN npx prisma generate

# ===== Stage 2: Builder =====
FROM node:20-alpine AS builder

WORKDIR /app

# Copy dependencies from deps stage
COPY --from=deps /app/node_modules ./node_modules
COPY --from=deps /app/prisma ./prisma

# Copy source code (from backend directory)
COPY backend/ .

# Build TypeScript to JavaScript
RUN npm run build

# ===== Stage 3: Production Runner =====
FROM node:20-alpine AS runner

WORKDIR /app

# Install only runtime dependencies
RUN apk add --no-cache openssl curl tzdata && \
    cp /usr/share/zoneinfo/UTC /etc/localtime && \
    echo "UTC" > /etc/timezone

# Create non-root user for security
RUN addgroup --system --gid 1001 nodejs && \
    adduser --system --uid 1001 nodejs

# Create logs directory
RUN mkdir -p /app/logs && chown -R nodejs:nodejs /app/logs

# Copy package files first
COPY --from=builder --chown=nodejs:nodejs /app/package*.json ./

# Install only production dependencies in final stage
RUN npm ci --only=production && \
    npm cache clean --force

# Copy built application and Prisma schema
COPY --from=builder --chown=nodejs:nodejs /app/dist ./dist
COPY --from=builder --chown=nodejs:nodejs /app/prisma ./prisma

# Install Prisma CLI for migrations and client generation
RUN npm install prisma@^5.22.0 --no-save

# Generate Prisma Client for production
RUN npx prisma generate

# Note: Migrations will be run at container startup via entrypoint script
# This allows DATABASE_URL to be available from Railway environment variables

# Verify Prisma Client was generated correctly
RUN test -f node_modules/.prisma/client/index.js && \
    test -f node_modules/.prisma/client/index.d.ts && \
    echo "âœ… Prisma Client generated successfully" || \
    (echo "âŒ ERROR: Prisma Client not found" && exit 1)

# Ensure nodejs user owns node_modules (especially .prisma directory) before switching users
RUN chown -R nodejs:nodejs /app/node_modules

# Create production tsconfig.json with baseUrl pointing to dist (where compiled files are)
RUN echo '{"compilerOptions":{"baseUrl":"dist","paths":{"@/*":["*"]}}}' > tsconfig.json && \
    chown nodejs:nodejs tsconfig.json

# Create entrypoint script to run migrations before starting server
# This must be done before switching to nodejs user
RUN echo '#!/bin/sh' > /app/entrypoint.sh && \
    echo 'set -e' >> /app/entrypoint.sh && \
    echo 'echo "ðŸ”„ Running database migrations..."' >> /app/entrypoint.sh && \
    echo 'npx prisma migrate deploy || {' >> /app/entrypoint.sh && \
    echo '  echo "âš ï¸  Migration failed, attempting db push as fallback..."' >> /app/entrypoint.sh && \
    echo '  npx prisma db push --accept-data-loss || exit 1' >> /app/entrypoint.sh && \
    echo '}' >> /app/entrypoint.sh && \
    echo 'echo "âœ… Migrations completed successfully"' >> /app/entrypoint.sh && \
    echo 'echo "ðŸš€ Starting application server..."' >> /app/entrypoint.sh && \
    echo 'exec node -r tsconfig-paths/register dist/server.js' >> /app/entrypoint.sh && \
    chmod +x /app/entrypoint.sh && \
    chown nodejs:nodejs /app/entrypoint.sh

# Switch to non-root user
USER nodejs

# Expose API port
EXPOSE 3001

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
  CMD curl -f http://localhost:3001/api/health || exit 1

# Start application (runs migrations first via entrypoint script)
CMD ["/app/entrypoint.sh"]


# ============================================
# Docker Environment Configuration
# Copy this to .env and customize as needed
# ============================================

# ===== Database Configuration =====
POSTGRES_USER=smartschedule
POSTGRES_PASSWORD=smartschedule_secure_password_change_in_production
POSTGRES_DB=smartschedule
POSTGRES_PORT=5432

# ===== JWT Configuration =====
# IMPORTANT: Change these in production!
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ===== Server Configuration =====
NODE_ENV=production
BACKEND_PORT=3001
FRONTEND_PORT=3000

# ===== CORS Configuration =====
FRONTEND_URL=http://localhost:3000

# ===== API URLs =====
# Internal Docker network URL (used by frontend SSR)
NEXT_PUBLIC_API_URL=http://backend:3001

# External URL (used by browser)
NEXT_PUBLIC_EXTERNAL_API_URL=http://localhost:3001

# ===== Rate Limiting =====
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

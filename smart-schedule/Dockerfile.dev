# ============================================
# Frontend Dockerfile - Development
# Next.js with hot-reload
# ============================================

FROM node:20-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm ci

# Copy source code
COPY . .

# Expose port
EXPOSE 3000

# Start dev server (uses dev:docker which binds to 0.0.0.0)
CMD ["npm", "run", "dev:docker"]


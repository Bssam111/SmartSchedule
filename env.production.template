# ===== Database Configuration =====
POSTGRES_USER=smartschedule
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
POSTGRES_DB=smartschedule_prod

# ===== Backend Configuration =====
JWT_SECRET=CHANGE_THIS_TO_A_VERY_LONG_RANDOM_STRING_AT_LEAST_32_CHARACTERS
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ===== Application URLs =====
FRONTEND_URL=https://smartschedule24.com
NEXT_PUBLIC_API_URL=https://smartschedule24.com/api
NEXT_PUBLIC_EXTERNAL_API_URL=https://smartschedule24.com

# ===== Redis Configuration =====
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD

# ===== WebAuthn Configuration =====
RP_ID=smartschedule24.com
RP_ORIGIN=https://smartschedule24.com

